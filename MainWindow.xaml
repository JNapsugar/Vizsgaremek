<Window x:Class="IngatlanKarbantartoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression.blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IngatlanKarbantartoWPF"
        mc:Ignorable="d"
        Title="Rentify adminisztráció" Height="450" Width="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.RowSpan="3">
            <ListBox Name="endpointsList" SelectionChanged="endpointsList_SelectionChanged"/>
        </StackPanel>

        <Grid Grid.RowSpan="3" Grid.Column="1">
            <DataGrid Name="dtg" AutoGenerateColumns="True" CanUserAddRows="False" 
                      IsReadOnly="True" VerticalAlignment="Stretch"/>
        </Grid>

        <UniformGrid Grid.Column="2" Grid.RowSpan="3" Rows="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="100" Height="50" Padding="5" Click="GET_Click" Margin="10">
                <TextBlock TextAlignment="Center">
                    <Run Text="Adatok"/>  
                    <LineBreak/>  
                    <Run Text="lekérése"/>
                </TextBlock>
            </Button>
            <Button Width="100" Height="50" Padding="5" Click="POST_Click">
                <TextBlock TextAlignment="Center">
                    <Run Text="Adatok"/>  
                    <LineBreak/>  
                    <Run Text="felvitele"/>
                </TextBlock>
            </Button>
            <Button Width="100" Height="50" Padding="5" Click="DELETE_Click">
                <TextBlock TextAlignment="Center">
                    <Run Text="Adatok"/>  
                    <LineBreak/>  
                    <Run Text="törlése"/>
                </TextBlock>
            </Button>
            <Button Width="100" Height="50" Padding="5" Click="PUT_Click">
                <TextBlock TextAlignment="Center">
                    <Run Text="Adatok"/>  
                    <LineBreak/>  
                    <Run Text="módosítása"/>
                </TextBlock>
            </Button>
        </UniformGrid>

    </Grid>
</Window>