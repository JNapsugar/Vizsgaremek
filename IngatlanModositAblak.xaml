<Window x:Class="IngatlanKarbantartoWPF.ModositAblak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rentify ingatlan frissítése" Height="450" Width="400">
    <Grid>
        <TextBlock Text="Cím" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox x:Name="CimTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="350"/>

        <TextBlock Text="Leírás" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" />
        <TextBox x:Name="LeirasTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="350"/>

        <TextBlock Text="Helyszín" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" />
        <TextBox x:Name="HelyszinTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" Width="350"/>

        <TextBlock Text="Ár" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0" />
        <TextBox x:Name="ArTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" Width="350"/>

        <TextBlock Text="Mérete" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,250,0,0" />
        <TextBox x:Name="MeretTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,270,0,0" Width="350"/>

        <TextBlock Text="Szobák száma" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,310,0,0" />
        <TextBox x:Name="SzobaTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,330,0,0" Width="350"/>

        <Button Content="Frissítés" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,10" Click="UpdateButton_Click"/>
    </Grid>
</Window>