<Window x:Class="IngatlanKarbantartoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IngatlanKarbantartoWPF"
        mc:Ignorable="d"
        Title="Ingatlan bérlési plafrom karbantaró applikációja" Height="450" Width="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="31*"/>
                <RowDefinition Height="162*"/>
                <RowDefinition Height="24*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.RowSpan="3" Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <DataGrid Name="dtg" AutoGenerateColumns="True" CanUserAddRows="False" IsReadOnly="True"/>
                </ScrollViewer>
            </StackPanel>

            <StackPanel Grid.RowSpan="3">
                <ListBox Name="endpointsList" SelectionChanged="endpointsList_SelectionChanged" />
            </StackPanel>

            <StackPanel Grid.Column="2" Grid.RowSpan="3">
                <Button Name="GET" Content="Adatok lekérése" Click="GET_Click"/>
                <Button Name="POST" Content="Adatok felvitele" Click="POST_Click"/>
                <Button Name="DELETE" Content="Adatok törlése" Click="DELETE_Click"/>
                <Button Name="PUT" Content="Adatok módosítása" Click="PUT_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>