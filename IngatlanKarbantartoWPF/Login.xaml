<Window x:Class="WpfLoginApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bejelentkezés" Height="180" Width="350">
    <Grid>
        <TextBlock Text="Felhasználónév:" Margin="10,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="UsernameTextBox" Width="200" Height="25" Margin="120,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBlock Text="Jelszó:" Margin="10,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox Name="PasswordBox" Width="200" Height="25" Margin="120,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Button Content="Bejelentkezés" Width="100" Height="30" Margin="120,100,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LoginButton_Click"/>
    </Grid>
</Window>