<Window x:Class="IngatlanKarbantartoWPF.FelhasznaloModositAblak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Felhasználó módosítása" Height="500" Width="400">
    <Grid>
        <!-- Felhasználónév -->
        <TextBlock Text="Felhasználónév" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox x:Name="LoginNevTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="350"/>

        <!-- Név -->
        <TextBlock Text="Név" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" />
        <TextBox x:Name="NevTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="350"/>

        <!-- Email -->
        <TextBlock Text="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" />
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" Width="350"/>

        <!-- Jelszó -->
        <TextBlock Text="Jelszó" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0" />
        <PasswordBox x:Name="JelszoPasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" Width="350"/>

        <!-- Engedély -->
        <TextBlock Text="Engedély" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,250,0,0" />
        <ComboBox x:Name="PermissionComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,270,0,0" Width="350">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="User"/>
        </ComboBox>

        <!-- Profilkép -->
        <TextBlock Text="Profilkép Path" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,310,0,0" />
        <TextBox x:Name="ProfilePicturePathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,330,0,0" Width="350"/>

        <!-- Aktív -->
        <CheckBox x:Name="AktivCheckBox" Content="Aktív" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,370,0,0" />

        <!-- Frissítés Gomb -->
        <Button Content="Frissítés" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,10" Click="UpdateButton_Click"/>
    </Grid>
</Window>
